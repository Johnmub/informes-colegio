<link rel="stylesheet" type="text/css" href="/css/admin/tablas.css">

<h1 class="titulo">Representantes<a href="/panel/representantes/papelera">Ver papelera <i class="fa fa-trash"></i></a></h1>

<% if(!modulo.registro.length) { %>
<p class="descripcion">Aún no hay representantes registrados.</p>
<a class="boton agregar" href="/panel/representantes/agregar"><i class="fa fa-plus"></i> Registrar un representante</a>
<% } else { %>
<p class="descripcion">Representantes de la institución (<%= modulo.registro.length %> registros)</p>

<div class="tabla">
  <div class="busqueda">
    <p>Busqueda</p>
    <select>
      <option value="todo" selected>Todo</option>
      <option value="cedula">Cédula</option>
      <option value="nombre">Nombre</option>
      <option value="apellido">Apellido</option>
      <option value="telefono">Teléfono</option>
      <option value="direccion">Dirección</option>
      <option value="correo">Correo</option>
    </select>
    <input type="text" name="busqueda" placeholder="Escriba su busqueda">
    <input type="button" name="buscar" value="Buscar" onclick="realizarBusqueda()">
  </div>
  <div class="contenedor">
    <table>
      <thead>
        <tr>
          <th>Cédula</th>
          <th>Nombre</th>
          <th>Teléfono</th>
          <th>Dirección</th>
        </tr>
      </thead>
      <tbody>
         <% modulo.registro.forEach(function(r) { %>
          <tr>
            <td><%= r.cedula %></td>
            <td><%= r.nombre + ' ' + r.apellido %></td>
            <td><%= r.telefono %></td>
            <td><%= r.direccion %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
  <div class="controles">
    <a class="agregar habilitado" href="/panel/representantes/agregar" title="Agregar"><i class="fa fa-plus"></i></a>
    <span></span>
    <a class="ver" title="Ver"><i class="fa fa-eye"></i></a>
    <a class="modificar" title="Editar"><i class="fa fa-wrench"></i></a>
    <form id="eliminar" method="POST">
      <button class="eliminar" title="Eliminar"><i class="fa fa-trash"></i></button>
    </form>
    <span></span>
    <a class="reporte habilitado" title="Imprimir reporte" onclick="obtenerReporte('table')"><i class="fa fa-print"></i></a>
  </div>
</div>

<div class="fila-detalles">
  <p class="titulo"><span id="nombre"></span></p>
  <ul>
    <li><span>Cédula:</span><span id="cedula"></span></li>
  </ul>
</div>


<script type="text/javascript">
  var modulo = <%-JSON.stringify(modulo)%>;
</script>
<script type="text/javascript" src="/js/lib/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="/js/lib/pdfmake.min.js"></script>
<script type="text/javascript" src="/js/lib/vfs_fonts.js"></script>
<script type="text/javascript" src="/js/admin/tablas.js"></script>
<% } %>
